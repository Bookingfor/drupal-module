						$suggestedStay->$key = $value; 
					}
					$otherData .= "|" . "CheckIn:" . DateTime::createFromFormat('Y-m-d',$formData['CheckIn']['date'])->format('Y-m-d') . "|" ."CheckOut:" . DateTime::createFromFormat('Y-m-d',$formData['CheckOut']['date'])->format('Y-m-d');
					
